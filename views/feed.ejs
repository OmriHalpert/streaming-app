<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/feed.css" />
    <title>Feed - Netflix</title>
    <script src="/js/feed.js" defer></script>
  </head>
  <body data-profile-id="<%= profileId %>">
    <div class="feed-header">
      <div class="netflix-logo">
        <img
          src="/resources/netflix_logo.png"
          alt="Netflix Logo"
          width="100"
        />
      </div>
      <div class="nav-selection-container">
        <button class="hamburger-btn">â˜°</button>
        <div class="nav-menu">
          <a class="nav-selection" href="#">Home</a>
          <a class="nav-selection" href="#">TV Shows</a>
          <a class="nav-selection" href="#">Movies</a>
          <a class="nav-selection" href="#">New & Popular</a>
          <a class="nav-selection" href="#">My List</a>
          <a class="nav-selection" href="#">Browse by Languages</a>
        </div>
      </div>
      <div class="settings-container">
        <div class="search-container">
          <input type="text" class="search-input" placeholder="Search for a title...">
          <button class="sort-button">A-Z</button>
          <img
            src="/resources/search_icon.png"
            alt="Search Icon"
            width="25"
            class="search-icon"
            style="cursor: pointer;"
          />
        </div>
        <a href="/logout">
          <img
            src="/resources/notification_icon.png"
            alt="Notification Icon"
            width="25"
            class="icon"
          />
        </a>
        <a href="/profiles?userId=<%= userId %>">
          <img
            src="<%= currentProfile ? currentProfile.avatar : '/resources/profile1.jpg' %>"
            alt="Profile Icon"
            width="30"
            class="icon"
          />
        </a>
      </div>
    </div>
    <div class="files-title">
      <h2>Your Movies and TV shows (<%= totalCount %> items)</h2>
    </div>
    <div class="genre-container" id="files-container">
      <% if (genreGroups && Object.keys(genreGroups).length > 0) { %>
        <% Object.keys(genreGroups).forEach(function(genre) { %>
          <div class="genre-section">
            <h2 class="genre-title"><%= genre %></h2>
            <div class="genre-row">
              <% genreGroups[genre].forEach(function(item) { %>
                <div class="genre-file <%= item.thumbnail ? 'file-with-thumbnail' : '' %>" 
                     data-content-name="<%= item.name %>" 
                     data-content-year="<%= item.year %>"
                     data-content-genre="<%= item.genre.join(', ') %>"
                     data-is-liked="<%= item.isLiked %>"
                     <% if (item.thumbnail) { %>
                     style="background-image: url('<%= item.thumbnail %>'); background-size: cover; background-position: center;"
                     <% } %>>
                  
                  <% if (item.thumbnail) { %>
                    <div class="file-overlay">
                      <div class="file-content">
                        <h3 title="<%= item.name %>"><%= item.name %> (<%= item.year %>)</h3>
                        <p>Genre: <%= item.genre.join(', ') %></p>
                        <p>Likes: <span class="likes-count"><%= item.likes %></span></p>
                      </div>
                      <span class="like-icon <%= item.isLiked ? 'liked' : '' %>" 
                            data-content-name="<%= item.name %>"></span>
                    </div>
                  <% } else { %>
                    <div class="file-text-content">
                      <h3 title="<%= item.name %>"><%= item.name %> (<%= item.year %>)</h3>
                      <p>Genre: <%= item.genre.join(', ') %></p>
                      <p>Likes: <span class="likes-count"><%= item.likes %></span></p>
                    </div>
                    <span class="like-icon <%= item.isLiked ? 'liked' : '' %>" 
                          data-content-name="<%= item.name %>"></span>
                  <% } %>
                </div>
              <% }) %>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <div class="no-content">
          <h3>No content available</h3>
          <p>Check back later for new movies and shows!</p>
        </div>
      <% } %>
    </div>
  </body>
</html>