<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/feed.css" />
    <title>Feed - Netflix</title>
    <script src="/js/api.js" defer></script>
    <script src="/js/feed.js" defer></script>
  </head>
  <body data-profile-id="<%= profileId %>" data-user-id="<%= userId %>">
    <div class="feed-header">
      <div class="netflix-logo">
        <img src="/resources/netflix_logo.png" alt="Netflix Logo" width="100" />
      </div>
      <div class="nav-selection-container">
        <button class="hamburger-btn">â˜°</button>
        <div class="nav-menu">
          <a class="nav-selection" href="#">Home</a>
          <a class="nav-selection" href="#">TV Shows</a>
          <a class="nav-selection" href="#">Movies</a>
          <a class="nav-selection" href="#">New & Popular</a>
          <a class="nav-selection" href="#">My List</a>
          <a class="nav-selection" href="#">Browse by Languages</a>
        </div>
      </div>
      <div class="settings-container">
        <div class="search-container">
          <input
            type="text"
            class="search-input"
            placeholder="Search for a title..."
          />
          <button class="sort-button">A-Z</button>
          <img
            src="/resources/search_icon.png"
            alt="Search Icon"
            width="25"
            class="search-icon"
            style="cursor: pointer"
          />
        </div>
        <a href="/logout">
          <img
            src="/resources/logout.png"
            alt="Logout Icon"
            width="25"
            class="icon"
          />
        </a>
        <a href="/profiles?userId=<%= userId %>">
          <div class="profile-avatar-container" id="profile-avatar-container">
            <div class="profile-loading"></div>
          </div>
        </a>
      </div>
    </div>

    <div class="page-container">
      <aside class="feed-aside">
        <h3>Browse by Genre</h3>
        <div class="genre-list">
          <!-- Empty list, genres render using API -->
        </div>
      </aside>
      <div class="feed-container">
        <div class="files-title">
          <h2 id="content-title">Loading your content...</h2>
        </div>

        <div class="recommendations-section genre-section">
          <h2 class="genre-title" data-no-click>Recommended for You</h2>
          <div class="recommendations-container" id="recommendations-container">
            <!-- Empty container, recommendations renders using API -->
          </div>
        </div>
        <!-- Empty container, feed renders using API -->
        <div class="genre-container" id="files-container">
          <div class="loading">Loading content...</div>
        </div>
      </div>
    </div>
  </body>
</html>
