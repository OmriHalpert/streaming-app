<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Content - Admin</title>
    <link rel="stylesheet" href="/css/add-content.css" />
  </head>
  <body>
    <div class="container">
      <div class="header">
        <img
          src="/resources/netflix_logo.png"
          alt="Netflix Logo"
          class="logo"
        />
        <button class="back-button" id="backButton">‚Üê Back</button>
      </div>

      <h1 class="page-title">Add New Content</h1>

      <div class="form-container">
        <!-- Basic Information -->
        <div class="form-section">
          <h2>Basic Information</h2>

          <div class="form-group">
            <label for="contentName">Content Name</label>
            <input
              type="text"
              id="contentName"
              placeholder="Enter content name"
              required
            />
          </div>

          <div class="form-group">
            <label for="releaseYear">Year of Release</label>
            <input
              type="number"
              id="releaseYear"
              placeholder="2024"
              min="1900"
              max="2100"
              required
            />
          </div>

          <div class="form-group">
            <label for="genres">Genres (comma-separated)</label>
            <input
              type="text"
              id="genres"
              placeholder="Action, Drama, Thriller"
              required
            />
          </div>

          <div class="form-group">
            <label for="director">Director</label>
            <input
              type="text"
              id="director"
              placeholder="Enter director name"
              required
            />
          </div>

          <div class="form-group">
            <label for="cast">Cast (comma-separated)</label>
            <input
              type="text"
              id="cast"
              placeholder="Actor 1, Actor 2, Actor 3"
              required
            />
          </div>

          <div class="form-group">
            <label for="summary">Summary</label>
            <textarea
              id="summary"
              rows="4"
              placeholder="Enter content summary"
              required
            ></textarea>
          </div>

          <div class="form-group">
            <label for="thumbnail">Thumbnail Image</label>
            <input type="file" id="thumbnail" accept="image/*" />
            <small>Upload a thumbnail image for the content</small>
          </div>
        </div>

        <!-- Content Type Selection -->
        <div class="form-section">
          <h2>Content Type</h2>

          <div class="form-group">
            <label for="contentType">Type</label>
            <select id="contentType">
              <option value="movie">Movie</option>
              <option value="show">TV Show</option>
            </select>
          </div>
        </div>

        <!-- Movie Section (shown when type is 'movie') -->
        <div class="form-section" id="movieSection">
          <h2>Movie Video</h2>
          
          <div class="form-group">
            <label for="movieVideo">Upload Video (MP4)</label>
            <input type="file" id="movieVideo" accept="video/mp4" required />
          </div>
        </div>        <!-- TV Show Section (shown when type is 'show') -->
        <div class="form-section" id="showSection" style="display: none">
          <h2>TV Show Seasons & Episodes</h2>

          <button type="button" class="add-season-btn" id="addSeasonBtn">
            + Add Season
          </button>

          <div id="seasonsContainer"></div>
        </div>

        <!-- Submit Button -->
        <div class="form-actions">
          <button type="button" class="submit-btn" id="submitBtn">
            Add Content
          </button>
        </div>

        <div id="messageBox" class="message"></div>
      </div>
    </div>

    <script src="/js/api.js"></script>
    <script src="/js/add-content.js"></script>
  </body>
</html>
